{% assign sectionIntro = site.data.section_intro %}

<section id="section3" class="about content__full-width content--center">
  <div class="container">
    <!-- Title -->
    {% if sectionIntro.intro_content.intro_title != '' %}
      <h1 class="hero__title">
        {% if page.language == "en" %}
          {{ sectionIntro.intro_content.intro_title }}
        {% endif %}

        {% if page.language == "fr" %}
          {{ sectionIntro.intro_content.fr.intro_title }}
        {% endif %}

        {% if page.language == "ar" %}
          {{ sectionIntro.intro_content.ar.intro_title }}
        {% endif %}
      </h1>
    {% endif %}

    <!-- Content -->
    {% if sectionIntro.intro_content.intro_text != '' %}
      {% if page.language == "en" %}
        {{ sectionIntro.intro_content.intro_text }}
      {% endif %}

      {% if page.language == "fr" %}
        {{ sectionIntro.intro_content.fr.intro_text }}
      {% endif %}

      {% if page.language == "ar" %}
        {{ sectionIntro.intro_content.ar.intro_text }}
      {% endif %}
    {% endif %}

    <!-- Button  -->
    {% if sectionIntro.intro_content.intro_download_button_text and sectionIntro.intro_content.intro_download_button_text != '' and page.language == "en" %}
      <a href="{{ sectionIntro.intro_content.intro_download_button_url }}" class="button">{{ sectionIntro.intro_content.intro_download_button_text }}</a>
    {% endif %}

    {% if sectionIntro.intro_content.fr.intro_download_button_text and sectionIntro.intro_content.fr.intro_download_button_text != '' and page.language == "fr" %}
      <a href="{{ sectionIntro.intro_content.fr.intro_download_button_url }}" class="button">{{ sectionIntro.intro_content.fr.intro_download_button_text }}</a>
    {% endif %}

    {% if sectionIntro.intro_content.ar.intro_download_button_text and sectionIntro.intro_content.ar.intro_download_button_text != '' and page.language == "ar" %}
      <a href="{{ sectionIntro.intro_content.ar.intro_download_button_url }}" class="button">{{ sectionIntro.intro_content.ar.intro_download_button_text }}</a>
    {% endif %}

    <!-- Seperator -->
    <hr>
  </div>
</section>