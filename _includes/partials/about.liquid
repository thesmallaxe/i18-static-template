{% assign sectionAbout = site.data.section_about %}

<section id="section2" class="about content__full-width content--center">
  <div class="container">
    {% if sectionAbout.about_content.about_title != '' %}
      <h1 class="hero__title">
        {% if page.language == "en" %}
          {{ sectionAbout.about_content.about_title }}
        {% endif %}

        {% if page.language == "fr" %}
          {{ sectionAbout.about_content.fr.about_title }}
        {% endif %}

        {% if page.language == "ar" %}
          {{ sectionAbout.about_content.ar.about_title }}
        {% endif %}
      </h1>
    {% endif %}

    {% if sectionAbout.about_content.about_text != '' %}
      {% if page.language == "en" %}
        {{ sectionAbout.about_content.about_text }}
      {% endif %}

      {% if page.language == "fr" %}
        {{ sectionAbout.about_content.fr.about_text }}
      {% endif %}

      {% if page.language == "ar" %}
        {{ sectionAbout.about_content.ar.about_text }}
      {% endif %}
    {% endif %}

    
    {% if sectionAbout.about_content.about_download_button_text and sectionAbout.about_content.about_download_button_text != '' and page.language == "en" %}
      <a href="{{ sectionAbout.about_content.about_download_button_url }}" class="button">{{ sectionAbout.about_content.about_download_button_text }}</a>
    {% endif %}

    {% if sectionAbout.about_content.fr.about_download_button_text and sectionAbout.about_content.fr.about_download_button_text != '' and page.language == "fr" %}
      <a href="{{ sectionAbout.about_content.fr.about_download_button_url }}" class="button">{{ sectionAbout.about_content.fr.about_download_button_text }}</a>
    {% endif %}

    {% if sectionAbout.about_content.ar.about_download_button_text and sectionAbout.about_content.ar.about_download_button_text != '' and page.language == "ar" %}
      <a href="{{ sectionAbout.about_content.ar.about_download_button_url }}" class="button">{{ sectionAbout.about_content.ar.about_download_button_text }}</a>
    {% endif %}

    <!-- Seperator -->
    <hr>
  </div>
</section>